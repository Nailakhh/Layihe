@using MercService.Core.ViewModels
@model HomeIndexViewModel

<div class="container-fluid bg-light p-0">
	<div class="row gx-0 d-none d-lg-flex">
		<div class="col-lg-7 px-5 text-start">
			<div class="h-100 d-inline-flex align-items-center py-3 me-4">
				<small class="fa fa-map-marker-alt text-primary me-2"></small>
				<a style="color:#555; text-decoration:none;" href="https://www.google.com/maps/search/?api=1&query=@Uri.EscapeDataString(Model.Location?.Address ?? "")" target="_blank" rel="noopener noreferrer">
					<small>@Model.Location?.Address</small>
				</a>
			</div>
			@* <div class="h-100 d-inline-flex align-items-center py-3">
				<small class="far fa-clock text-primary me-2"></small>
				<small>@Model.ContactInfo?.WorkDaysHours</small>
			</div> *@
		</div>
		<div class="col-lg-5 px-5 text-end">
			@* <div class="h-100 d-inline-flex align-items-center py-3 me-4">
				<small class="fa fa-phone-alt text-primary me-2"></small>
				<small>@Model.ContactInfo?.Phone</small>
			</div> *@
			<div class="h-100 d-inline-flex align-items-center">
				@foreach (var social in Model.SocialLinks)
				{
					<a class="btn btn-sm-square bg-white text-primary me-1" href="@social.Url" target="_blank" rel="noopener noreferrer">
						@if (social.Platform == "Facebook")
						{
							<i class="fab fa-facebook-f"></i>
						}
						else if (social.Platform == "Instagram")
						{
							<i class="fab fa-instagram"></i>
						}
						else if (social.Platform == "Twitter")
						{
							<i class="fab fa-twitter"></i>
						}
						else if (social.Platform == "LinkedIn")
						{
							<i class="fab fa-linkedin-in"></i>
						}
						else if (social.Platform == "WhatsApp")
						{
							<i class="fab fa-whatsapp"></i>
						}

					</a>
				}
			</div>
		</div>
	</div>
</div>
